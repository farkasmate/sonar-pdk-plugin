    <type>CODE_SMELL</type>
    <severity>MINOR</severity>
    <cardinality>SINGLE</cardinality>
    <tag>puppet-lint</tag>
    <remediationFunction>CONSTANT_ISSUE</remediationFunction>
    <remediationFunctionBaseEffort>2min</remediationFunctionBaseEffort>
  </rule>
  <rule>
    <key>puppet-syntax:error</key>
    <name>puppet-syntax:error</name>
    <description>Error from puppet-syntax</description>
    <type>BUG</type>
    <severity>BLOCKER</severity>
    <cardinality>SINGLE</cardinality>
    <tag>puppet-syntax</tag>
    <remediationFunction>CONSTANT_ISSUE</remediationFunction>
    <remediationFunctionBaseEffort>5min</remediationFunctionBaseEffort>
  </rule>
  <rule>
    <key>rubocop:convention</key>
    <name>rubocop:convention</name>
    <description>Convention issue from rubocop</description>
    <type>CODE_SMELL</type>
    <severity>MINOR</severity>
    <cardinality>SINGLE</cardinality>
