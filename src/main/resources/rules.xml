<?xml version="1.0"?>
<pdklint-rules>
  <rule>
    <key>pdk:generic</key>
    <name>pdk:generic</name>
    <description>This version of PDK Plugin doesn't recognize this issue. You might need to update the plugin.</description>
    <type>BUG</type>
    <severity>MAJOR</severity>
    <cardinality>SINGLE</cardinality>
    <tag>uncategorized</tag>
    <remediationFunction>CONSTANT_ISSUE</remediationFunction>
    <remediationFunctionBaseEffort>30min</remediationFunctionBaseEffort>
  </rule>
  <rule>
    <key>metadata-json-lint:error</key>
    <name>metadata-json-lint:error</name>
    <description>Error from metadata-json-lint</description>
    <type>CODE_SMELL</type>
    <severity>MAJOR</severity>
    <cardinality>SINGLE</cardinality>
    <tag>metadata-json-lint</tag>
    <remediationFunction>CONSTANT_ISSUE</remediationFunction>
    <remediationFunctionBaseEffort>2min</remediationFunctionBaseEffort>
  </rule>
  <rule>
    <key>metadata-json-lint:warning</key>
    <name>metadata-json-lint:warning</name>
    <description>Warning from metadata-json-lint</description>
    <type>CODE_SMELL</type>
    <severity>MINOR</severity>
    <cardinality>SINGLE</cardinality>
    <tag>metadata-json-lint</tag>
    <remediationFunction>CONSTANT_ISSUE</remediationFunction>
    <remediationFunctionBaseEffort>2min</remediationFunctionBaseEffort>
  </rule>
  <rule>
    <key>metadata-syntax:error</key>
    <name>metadata-syntax:error</name>
    <description>Error from metadata-syntax</description>
    <type>BUG</type>
    <severity>MAJOR</severity>
    <cardinality>SINGLE</cardinality>
    <tag>metadata-syntax</tag>
    <remediationFunction>CONSTANT_ISSUE</remediationFunction>
    <remediationFunctionBaseEffort>5min</remediationFunctionBaseEffort>
  </rule>
  <rule>
    <key>puppet-lint:error</key>
    <name>puppet-lint:error</name>
